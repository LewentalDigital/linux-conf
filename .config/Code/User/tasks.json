{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "printline",
            "type": "shell",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "options": {
                "statusbar": {
                    "hide": true,
                }
            },
            "linux": {
                "command": "printf '─%.0s' $(seq 1 $(tput cols))"
            },
            "windows": {
                "command": "'─'*$Host.UI.RawUI.WindowSize.Width"
            }
        },
        // Python
        {
            "label": "run py",
            "type": "shell",
            "options": {
                "statusbar": {
                    "filePattern": "\\.py$",
                    "label": "$(run)",
                    "color": "#33C748",
                    "detail": "Run Python"
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "dependsOn": [
                "printline"
            ],
            "dependsOrder": "sequence",
            "linux": {
                "command": "echo -e '\\033[0;34mRunning Python file\\033[0m\\n' && python '${file}' && echo -e '\\n\\033[0;34mEnd of execution\\033[0m'"
            },
            "windows": {
                "command": "echo 'Running Python file\\n'; python '${file}'"
            }
        },
        // Java
        {
            "label": "compile java",
            "type": "shell",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "dependsOn": [
                "printline"
            ],
            "options": {
                "statusbar": {
                    "filePattern": "\\.java$",
                    "label": "$(combine)",
                    "color": "#FC5753",
                    "detail": "Compile Java"
                }
            },
            "linux": {
                "command": "javac '${file}' && echo -e '\\033[0;32mCompilation Success!\\033[0m'"
            },
            "windows": {
                "command": "javac '${file}'"
            }
        },
        {
            "label": "run java",
            "type": "shell",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "options": {
                "statusbar": {
                    "filePattern": "\\.java$",
                    "label": "$(run)",
                    "color": "#33C748",
                    "detail": "Run Java"
                }
            },
            "dependsOn": [
                "printline"
            ],
            "linux": {
                "command": "echo -e '\\033[0;34mRunning Java file\\033[0m\\n' && java -cp '${fileDirname}' '${fileBasenameNoExtension}' && echo -e '\\n\\033[0;34mEnd of execution\\033[0m'"
            },
            "windows": {
                "command": "echo 'Running Java file\\n'; java -cp '${fileDirname}' '${fileBasenameNoExtension}'"
            }
        },
        {
            "label": "compile and run java",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "options": {
                "statusbar": {
                    "filePattern": "\\.java$",
                    "label": "$(combine)$(run)",
                    "color": "#FDBC40",
                    "detail": "Compile & Run Java"
                }
            },
            "dependsOn": [
                "printline",
                "compile java",
                "run java",
            ],
            "dependsOrder": "sequence",
        },
