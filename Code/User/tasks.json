{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "printline",
            "type": "shell",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "options": {
                "statusbar": {
                    "hide": true,
                }
            },
            // "command": "'='*$Host.UI.RawUI.WindowSize.Width" // Windows PowerShell
            // "command": "printf '=%.0s' $(seq 1 $(tput cols))" // Linux Bash
            "command": "python -c \"import os; print('=' * os.get_terminal_size()[0])\"" // Python
        },
        // Python
        {
            "label": "run",
            "type": "shell",
            "options": {
                "statusbar": {
                    "filePattern": "\\.py$",
                    "label": "$(run)",
                    "color" : "#33C748",
                    "detail": "Run Python"
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "dependsOn": [
                "printline"
            ],
            "dependsOrder": "sequence",
            // "command": "echo '\\033[0;34mRunning Python file\\033[0m\\n' && python ${file} && echo '\\n\\033[0;34mEnd of execution\\033[0m'"
            "command": "echo 'Running Python file\\n' && python ${file} && echo '\\nEnd of execution'"
        },
        // C
        {
            "label": "compile",
            "type": "shell",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "dependsOn": [
                "printline"
            ],
            "options": {
                "statusbar": {
                    "filePattern": "\\.c$",
                    "label": "$(combine)",
                    "color" : "#FC5753",
                    "detail": "Compile C"
                }
            },
            // "command": "gcc -Wall -o '${fileDirname}${pathSeparator}${fileBasenameNoExtension}' '${file}' && echo '\\033[0;32mCompilation Success!\\033[0m' || echo '\\033[0;31mCompilation Failed!\\033[0m'",
            "command": "gcc -Wall -o '${fileDirname}${pathSeparator}${fileBasenameNoExtension}' '${file}' && echo 'Compilation Success!'",
        },
        {
            "label": "run",
            "type": "shell",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "options": {
                "statusbar": {
                    "filePattern": "\\.c$",
                    "label": "$(run)",
                    "color": "#33C748",
                    "detail": "Run C"
                }
            },
            "dependsOn": [
                "printline"
            ],
            // "command": "echo '\\033[0;34mRunning C file\\033[0m\\n' && ${fileDirname}${pathSeparator}${fileBasenameNoExtension} && echo '\\n\\033[0;34mEnd of execution\\033[0m'"
            "command": "echo 'Running C file\\n' && ${fileDirname}${pathSeparator}${fileBasenameNoExtension} && echo '\\nEnd of execution'"
        },
        {
            "label": "Compile & Run",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "options": {
                "statusbar": {
                    "filePattern": "\\.c$",
                    "label": "$(combine)$(run)",
                    "color": "#FDBC40",
                    "detail": "Compile & Run C"
                }
            },
            "dependsOn": [
                "printline",
                "compile",
                "run",
            ],
            "dependsOrder": "sequence",
        },
        
        // C++
        {
            "label": "compile",
            "type": "shell",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "dependsOn": [
                "printline"
            ],
            "options": {
                "statusbar": {
                    "filePattern": "\\.cpp$",
                    "label": "$(combine)",
                    "color" : "#FC5753",
                    "detail": "Compile C++"
                }
            },
            // "command": "g++ -Wall -o '${fileDirname}${pathSeparator}${fileBasenameNoExtension}' '${file}' && echo '\\033[0;32mCompilation Success!\\033[0m' || echo '\\033[0;31mCompilation Failed!\\033[0m'"
            "command": "g++ -Wall -o '${fileDirname}${pathSeparator}${fileBasenameNoExtension}' '${file}' && echo 'Compilation Success!'"
        },
        {
            "label": "run",
            "type": "shell",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "options": {
                "statusbar": {
                    "filePattern": "\\.cpp$",
                    "label": "$(run)",
                    "color": "#33C748",
                    "detail": "Run C++"
                }
            },
            "dependsOn": [
                "printline"
            ],
            // "command": "echo '\\033[0;34mRunning C++ file\\033[0m\\n' && ${fileDirname}${pathSeparator}${fileBasenameNoExtension} && echo '\\n\\033[0;34mEnd of execution\\033[0m'"
            "command": "echo 'Running C++ file\\n' && ${fileDirname}${pathSeparator}${fileBasenameNoExtension} && echo '\\nEnd of execution'"
        },
        {
            "label": "Compile & Run",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": false
            },
            "options": {
                "statusbar": {
                    "filePattern": "\\.cpp$",
                    "label": "$(combine)$(run)",
                    "color": "#FDBC40",
                    "detail": "Compile & Run C++"
                }
            },
            "dependsOn": [
                "printline",
                "compile",
                "run",
            ],
            "dependsOrder": "sequence",
        },
    ]
}